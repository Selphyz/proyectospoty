{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="./css/player_styles.css">

{% endblock %}

{% block body %}
<div class="container-fluid col-12">
    {# Búsqueda, parte superior #}
    <div id="superior" class='row col-12'>
        <div class='col-12'>
            {{ include('musica/_busqueda.html.twig') }}
            {% if (app.user!=null ) %}
                {{ app.user.username }}
            {% endif %}
        </div>
    </div>

    {# Cuerpo, fila central#}
    <div id="central" class='row col-12'>
        {# Cola de reproducción #}
        <div id="cola" class="col-4">
            {{ include('musica/_cola_repr.html.twig') }}    
        </div>
        {# Resultados de la Búsqueda #}
        <div id='result' class="col-4">
            {{ include('musica/_resultados.html.twig') }}    
        </div>
        {# Listas de reproducción #}
        <div id="listas" class="col-4">
            {{ include('musica/_listas_repr.html.twig') }}    
        </div>
    </div>

    {# Reproduciendo, fila inferior #}
    <div id="inferior" class='row fixed-bottom'>
        <div class='col-12'>
            {{ include('musica/_reproduciendo.html.twig') }}    
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="js/howler.core.js"></script>
    <script type="text/javascript" src="js/cola_repr.js"></script>
    <script type="text/javascript" src="js/principal.js"></script>

{% endblock %}
